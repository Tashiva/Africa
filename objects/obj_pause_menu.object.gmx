            <kind>1</kind>
            <string>/// Control the menu
if (alarm[0] &lt;= 0) {

// navigate through the menu
    if (obj_input.move_down) {
        if (menu_index &lt; array_length_1d(option)-1) {
            menu_index++;
        } else {
            menu_index = 0;
        }
        alarm[0] = room_speed * 0.2;
    }    
    if (obj_input.move_up) {
        if (menu_index &gt; 0) {
            menu_index--;
        } else {
            menu_index = array_length_1d(option)-1;
        }
        alarm[0] = room_speed * 0.2;
    }
    
// activate menu options
    if (obj_input.action_key) {
        switch (menu_index)
        {
            // back to the game
            case 0:
                obj_player.state = obj_player_stats.prev_state;
                room_goto(obj_player_stats.prev_room);
                break;
                
            // save the game    
            case 1:
                scr_save_game();
                break;
                
            // load a savegame    
            case 2:
                scr_load_game();
                break;
                
            // quit    
            case 3:
                game_end();
                break;
                
            default:
                break;
        }
        obj_input.action_key = false;
    }
    
    
}
</string>
